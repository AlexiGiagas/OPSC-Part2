<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7FDE2"
    tools:context=".ListOfEntries">

    <TextView
        android:id="@+id/textView"
        android:layout_width="244dp"
        android:layout_height="39dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="625dp"
        android:text="List Of Entries"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStartDate"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="544dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="Enter Start Date"
        android:inputType="date"
        android:paddingLeft="15dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEndDate"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="478dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="Enter End Date"
        android:inputType="date"
        android:paddingLeft="15dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSearchEntries"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="408dp"
        android:backgroundTint="#96D19C"
        android:text="Search Entries"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lstEntries"
        android:layout_width="409dp"
        android:layout_height="368dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="362dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>